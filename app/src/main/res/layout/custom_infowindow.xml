<?xml version="1.0" encoding="utf-8"?>
<!--
This is the XML page for the custom info window which displays the data infomration
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/button_background"
    android:layout_marginBottom="20dp"
    >

    <TextView
        android:id="@+id/info_window_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Title"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColor="#ffff"
        />

    <TextView
        android:id="@+id/info_window_text"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Snippet"
        android:textSize="14sp"
        android:layout_below="@+id/info_window_title"
        android:layout_marginTop="15dp"
        android:textColor="#ffff"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Text 3"
        android:layout_below="@+id/info_window_text"
        android:layout_marginTop="15dp"
        android:textColor="#ffff"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/snippet"
        />

</RelativeLayout>