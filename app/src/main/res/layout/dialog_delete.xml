<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="Warning!"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_text"
        android:text="This is an irreversible action. Please confirm your login details before proceeding."
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/dialog_title"
        android:textSize="18sp"
        android:textColor="#000"
        android:linksClickable="true"
        android:clickable="true"
        android:focusable="true"
        />

    <EditText
        android:id="@+id/delete_email"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="18sp"
        android:layout_below="@id/dialog_text"
        />



    <EditText
        android:id="@+id/delete_password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="18sp"
        android:layout_below="@id/delete_email"
        android:inputType="textPassword"
        />


    <Button
        android:id="@+id/confirm_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffff"
        android:text="Confirm"
        android:textStyle="bold"
        android:layout_below="@id/delete_password"
        android:layout_alignEnd="@id/dialog_text"
        android:textColor="@color/colorPrimary"
        android:stateListAnimator="@null"
        />

</RelativeLayout>